<h1>New Restaurant Listing</h1>

<%= form_for @restaurant, url: restaurants_path do |f| %>
<p>
<%=f.label :name %><br>
<%=f.text_field :name %>
</p>

<p>
<%= f.label :phone %><br>
<%= f.text_area :phone %>
</p>

<p>
<%= f.label :address %><br>
<%= f.text_area :address %>
</p>


<p>
<%= f.label :genre %><br>
<%= f.text_area :genre %>
</p>

<p>
<%= f.file_field :photo %>
</p>

<p>
<%= f.submit %>
</p>
<% end %>

<p>
<%= link_to 'Back to Restaurant List',restaurants_path %>
</p>