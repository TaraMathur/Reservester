<p>
<strong>Name:</strong>
<%= @restaurant.name %>
</p>

<p>
<strong>Address:</strong>
<%= @restaurant.address %>
</p>

<p>
<strong>Phone:</strong>
<%= @restaurant.phone %>
</p>

<p>
<strong>Genre:</strong>
<%= @restaurant.genre %>
</p>

<p>
<strong>Owner:</strong>
<%= @restaurant.user.email %>
</p>

<p>
<!<%= image_tag @restaurant.photo.url %>
</p>


<% if !current_user %>
<h2>Make a reservation:</h2>
<%= form_for([@restaurant, @restaurant.reservations.build]) do |f| %>
  <p>
    <%= f.label :user %><br>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :time %><br>
    <%= f.time_select :time, :minute_step => 15, :ampm => true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%end%>

<p>
<%= link_to 'Back to Restaurant List',restaurants_path %>
</p>
