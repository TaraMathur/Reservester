<p>
<strong>Name:</strong>
<%= @restaurant.name %>
</p>

<p>
<strong>Address:</strong>
<%= @restaurant.address %>
</p>

<p>
<strong>Phone:</strong>
<%= @restaurant.phone %>
</p>

<p>
<strong>Genre:</strong>
<%= @restaurant.genre %>
</p>

<p>
<%= image_tag @restaurant.photo.url %>
</p>

<! Only show Current Reservations to owners >
<h2>Current Reservations</h2>
<table>
	<tr>
		<th>User</th>	
		<th>Time</th>
	</tr>
	<% @restaurant.reservations.each do |reservation| %>
		<tr>
		<td><%= reservation.user %></td>
		<td><%= reservation.time %></td>
		<td><%= link_to 'Delete', restaurant_reservation_path(reservation), :method => :delete, data: { confirm: 'Are you sure you want to delete?' }%></td>
		</tr>
		<%end%>
</table>

<h2>Make a reservation:</h2>
<%= form_for([@restaurant, @restaurant.reservations.build]) do |f| %>
  <p>
    <%= f.label :user %><br>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :time %><br>
    <%= f.text_area :time %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
<%= link_to 'Back',restaurants_path %>
</p>
