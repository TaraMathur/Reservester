<!DOCTYPE html>
<html>
  <head>
    <title>Reservester</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if owner_signed_in? %>
  	<%=link_to current_owner.email, edit_owner_registration_path %>
  	<%= link_to 'Logout', destroy_owner_session_path, method: :delete, data: {confirm: 'Sure?'} %>
  <% else %>
  	<%= link_to 'Login', new_owner_session_path %>
  	<%= link_to 'Sign up',new_owner_registration_path %><br>
  <% end %>

  	<p class="notice"><%= notice %></p>
  	<p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
